doi = {10.1016/j.solener.2006.03.009},
file = {:Users/jonathanchambers/Documents/Papers/2007/Loutzenhiser et al/2007 - Loutzenhiser et al. - Empirical validation of models to compute solar irradiance on inclined surfaces for building energy simulat.pdf:pdf},
issn = {0038092X},
