number = {July},
pages = {254},
title = {{Building Diagnostics : Practical Measurement of the Fabric Thermal Performance of Houses}},
url = {https://dspace.lboro.ac.uk/dspace-jspui/bitstream/2134/19274/1/Thesis-2015-Jack.pdf},
year = {2015}
}
