doi = {10.1016/j.enbuild.2009.12.004},
file = {:Users/jonathanchambers/Documents/Papers/2010/Galvin/2010 - Galvin - Thermal upgrades of existing homes in Germany The building code, subsidies, and economic efficiency.pdf:pdf},
