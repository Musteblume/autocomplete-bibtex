file = {:Users/jonathanchambers/Documents/Papers/2017/DeForest et al/2017 - DeForest et al. - A comparative energy analysis of three electrochromic glazing technologies in commercial and residential buildi.pdf:pdf},
issn = {03062619},
journal = {Applied Energy},
pages = {95--109},
title = {{A comparative energy analysis of three electrochromic glazing technologies in commercial and residential buildings}},
url = {http://www.sciencedirect.com/science/article/pii/S0306261917301216},
volume = {192},
year = {2017}
}
@article{Hamilton2016a,
abstract = {Indoor temperatures during winter conditions play an important role in influencing: the health of households, space heating energy demand and peak heating power. How physical dwelling features and household characteristics affect wintertime indoor temperatures has been examined among low-income households, but not across English households in a systematic manner. In this paper there was a particular focus on whether older dwellings are colder and how temperature conditions vary with household socio-economic conditions. Using a cross-sectional survey of English dwellings that included monitoring of indoor temperatures from January 2011 to February 2012, this study examines the determinants of indoor temperatures during wintertime conditions within a representative sample of English dwellings (N=821). The study analysed indoor temperatures standardised to outdoor wintertime conditions of 0 °C, 5 °C and 10 °C within the study sample and the influence of physical dwelling features (type, age, size), household characteristics (tenure, income, composition, benefit receipt) and energy performance (loft and wall insulation, heating system and performance rating levels). The analysis finds that as dwelling age increased, so did indoor temperatures in both the living room and bedrooms, after adjusting for a selection of dwelling and household characteristics. Compared to the lowest income quintile, households with higher incomes kept warmer temperatures, but this was not a linear increase and the highest incomes were not on average the warmest. However, there appears to be little change in these trends when looking at lower or higher outdoor temperature conditions (i.e. 0 °C and 10 °C). In designing policies to improve indoor thermal conditions, policymakers will need to consider underlying energy performance of the dwelling alongside the socio-economic conditions of the household.},
author = {Hamilton, Ian and O'Sullivan, Aidan and Huebner, Gesche and Shipworth, David and Summerfield, Alex and Oreszczyn, Tadj and Davies, M},
file = {:Users/jonathanchambers/Documents/Papers/2011/CER/2011 - CER - Electricity Smart Metering Customer Behaviour Trials ( CBT ) Findings Report(156).pdf:pdf;:Users/jonathanchambers/Documents/Papers/2016/Hamilton et al/2016 - Hamilton et al. - Old and cold findings on the determinants of indoor temperatures in English dwellings during cold condition(2).docx:docx},
title = {{Old and cold: findings on the determinants of indoor temperatures in English dwellings during cold conditions}},
year = {2016}
