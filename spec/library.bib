journal = {ECEEE 2013 Summer Study Proceedings, 3–8 June 2013, Toulon/Hy{\`{e}}res, France},
keywords = {building envelope,built environment,co-heating,energy efficiency gap,energy performance,field data,measurement and evaluation,simulation},
